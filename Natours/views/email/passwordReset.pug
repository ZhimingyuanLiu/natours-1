extends baseEmail.pug

block content
  p Hi #{firstName},
    p Forgot your password? Visit the following URL to request a new one: #{url}
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                    a(href=`${url}`, target='_blank') Reset your password
    p If your didn't forget your password, please ignore this email!