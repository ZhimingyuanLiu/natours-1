extends base

block content
  main.main
    if user
      .error
        .error__title
          h2.heading-secondary.heading-secondary--error WRONG ROUTE
          h2.error__emoji 😁 🤣
        .error__msg There's no need to reset your password, just visit your dashboard!
    else
      .login-form
        h2.heading-secondary.ma-bt-lg Reset your password
        form.form.form--forgotPassword
          .form__group
            label.form__label(for='email') Email address
            input#email.form__input(type='email', placeholder='you@example.com', required)
          .form__group
            button.btn.btn--green Send email